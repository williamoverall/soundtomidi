<RootLayout>:
    screen_manager: screen_manager
    orientation: 'vertical'
    BoxLayout:
        size_hint: 1, .05
        Spinner:
            size_hint: .8, 1
            width: '108sp'
            text: 'Spinner'
            values: [screen.name for screen in screen_manager.screens]
            on_text: root.show_kv(*args)
    BoxLayout:
        ScreenManager:
            id: screen_manager
            Screen:
                name: "Monitor"
                #MonitorContainer:
            Screen:
                name: "Settings"
                #SettingsContainer:
